{
  "name": "spotify-wrapper",
  "version": "1.0.0",
  "description": "A wrapper to work with Spotify Web API",
  "scripts": {
    "start": "webpack-dev-server --mode development --open",
    "build": "webpack --mode production",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run lint && npm run test:coverage",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require @babel/register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require @babel/register --watch",
    "test:coverage": "nyc npm test"
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**",
      "babel.config.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mathvbarone/spotify-wrapper"
  },
  "keywords": [],
  "author": "Matheus Barone <matheusvbarone@gmail.com> (http://matheusbarone.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mathvbarone/spotify-wrapper/issues"
  },
  "homepage": "https://matheusbarone.com",
  "dependencies": {
    "@babel/polyfill": "^7.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-loader": "^8.0.2",
    "chai": "^4.1.2",
    "coffeescript": "^2.3.1",
    "css-loader": "^0.28.11",
    "editorconfig": "^0.15.0",
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.14.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "js-beautify": "^1.7.5",
    "mini-css-extract-plugin": "^0.4.0",
    "mocha": "^5.2.0",
    "node-fetch": "^2.2.0",
    "nyc": "^13.0.1",
    "sinon": "^6.2.0",
    "sinon-chai": "^3.2.0",
    "sinon-stub-promise": "^4.0.0",
    "webpack": "^4.17.2",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4"
  }
}
